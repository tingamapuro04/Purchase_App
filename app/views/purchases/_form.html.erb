  <% end %>


  <div>
    <%= form.label :name, class: "form-label", style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :amount, class: "form-label", style: "display: block" %>
    <%= form.number_field :amount, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :image, class: "form-label", style: "display: block" %>
