<h1>Groups</h1>

<div id="groups">
  <% @groups.each do |group| %>
    <%= link_to group_path(group) do %>
    <p>Name: <%= group.name%></p>
    <%= image_tag group.image%>
    <p>Purchases: <%= group.purchases.count %> </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New group", new_group_path %>
