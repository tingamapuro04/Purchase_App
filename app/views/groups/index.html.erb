<h1 class="h-center">Categories</h1>

<% @mon = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'June', 'July', 'Aug', 'Sept', 'Oct', 'Nov', 'Dec'] %>

<div id="groups">
  <% @groups.each do |group| %>
    <%= link_to group_path(group), class: 'mobutu' do %>
    <div class="group-item">
      <div class="group-img">
        <%= image_tag group.image, class: 'img' %>
      </div>
      <div class="group-name">
        <p class="txt one"><%= group.name%></p>
        <p class="txt two">Total amount: <%= group.purchases.sum('amount') %> </p>
        <% @date = group.updated_at %>
        <p> <%= @date.day %>  <%= @mon[@date.month] %> <%= @date.year %> </p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>

<button class="btn-1">  <%= link_to "New group", new_group_path, class: 'back8' %> </button>
